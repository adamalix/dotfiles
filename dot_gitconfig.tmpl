[user]
    email = {{ .email | quote }}
    name = {{ .name | quote }}
[core]
    editor = zed --wait --new
    excludesfile = ~/.gitignore
    pager = delta
[merge]
    conflictstyle = zdiff3

[include]
    path = ~/.gitconfig_local
[interactive]
    diffFilter = delta --color-only
[pull]
    rebase = true
[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
[delta]
    navigate = true
    line-numbers = true
    hyperlinks = true
